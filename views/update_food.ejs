<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Food Record</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
 </head>

  <body>
  <h1>Food: <%= food.name %></h1>

  <form id="form" enctype="multipart/form-data" method="post" action="../update_food">
  
  <div class="form-group">
    <label for="file">Image</label>
    <input type="file" name="image" value="<%= food.image %>" />
    </div>

  <div>
    <label for="sku">Sku</label><br>
    <input type="text" name="sku" value="<%= food.sku %>">    
  </div>

  <div>
    <label for="name">Name</label><br>
    <input type="text" name="name" value="<%= food.name %>">    
  </div>

  <div>
    <label for="description">Description</label><br>
    <textarea name="description" rows="4" cols="50" value="<%= food.description %>"></textarea>    
  </div>

  <div>
    <label for="price">Price</label><br>
    <input type="text" name="price" value="<%= food.price %>">    
  </div>

  
  <input type="hidden"  name="doc_id" value="<%= food.doc_id %>">
  
  <input type="submit" value="Submit"> 
  </form>
 
 

  </body>

</html>
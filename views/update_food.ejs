<div class="container bg-light">
  <div class="card mt-4"> 
    <div class="card-body">
    
        <h1 class="my-4">Food: <%= data.name %></h1> 

          <form id="form" enctype="multipart/form-data" method="post" action="../update_food">
          
          <div class="form-group">
            <label for="file">Image</label>
            <input class="form-control" type="file" name="file" value="<%= data.image %>" />
          </div>

          <div>
            <label for="sku">Sku</label><br>
            <input class="form-control" type="text" name="sku" value="<%= data.sku %>">    
          </div>

          <div>
            <label for="name">Name</label><br>
            <input class="form-control" type="text" name="name" value="<%= data.name %>">    
          </div>

          <div>
            <label for="description">Description</label><br>
            <textarea class="form-control" name="description" rows="" cols=""></textarea>    
          </div>

          <div>
            <label for="price">Price</label><br>
            <input class="form-control" type="text" name="price" value="<%= data.price %>"><br>    
          </div>
          
          <input type="hidden" name="doc_id" value="<%= data.doc_id %>">          
          <input class="btn btn-dark" type="submit" value="Submit"> 
          </form>
      </div>

    <th>Member Name</th>
    <th>Phone</th>       
    <th>Address</th>
    <th>Points</th> 
    <th>Status</th>
    <th>Action</th>
  </tr>

  <% data.forEach(function(member){ %>
     <tr>
      
       <td><%= member.facebookid %></td>
       <td><%= member.name %></td>
       <td><%= member.phone %></td>

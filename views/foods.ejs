  <body>
            
      <div class="card-body">
        <h1>All Foods </h1>

          <table>
            <tr>
              <th>Image</th>
              <th>SKU</th>
              <th>Name</th>
              <th>Description</th>
              <th>Price</th>             
              <th>Action</th>    
            </tr>

            <% data.forEach(function(food){ %>
               <tr>
                
                 <td><img src="<%= food.image %>" width="100"/></td>
                 <td><%= food.sku %></td>
                 <td><%= food.name %></td>
                 <td><%= food.description %></td>
                 <td><%= food.price %></td>               
                 
                 <td><a class="btn btn-outline-dark" href="update_food/<%= food.doc_id %>">Edit</a>  
                  <a class="btn btn-outline-dark" href="delete_food/<%= food.doc_id %>">Delete</a></td>
               </tr>
            <% }); %>

          </table>                
      </div> 
      
  </body>


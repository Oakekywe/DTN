<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Foods</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
    </style>
 </head>

  <body>
  <h1>All Foods</h1>
  <p><a href="../../admin/addfood">Add Food</a></p>

  <table cellspacing="1" cellpadding="5" border="1">
    <tr>
    <th>Image</th>
    <th>SKU</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>   
    <th>Action</th>    
  </tr>


  <% data.forEach(function(food){ %>
     <tr>      
       <td><img src="<%= food.image %>"/></td>
       <td><%= food.sku %></td>
       <td><%= food.name %></td>
       <td><%= food.description %></td>
       <td><%= food.price %></td>     
       
       <td><a href="#">Edit</a> | <a href="#">Delete</a></td>
     </tr>
  <% }); %>

	</table>  

  </body>

</html>
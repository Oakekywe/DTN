<body>
<div class="container bg-light">
  <div class="card mt-4"> 
    <div class="card-body">
    
        <h1 class="my-4">Trade Ref: <%=data.ref %></h1>

        <form id="form" method="post" action="../update_traderecord">
        <div>
          <label for="ref">Reference</label><br>
          <input class="form-control" type="text" name="ref" value="<%= data.ref %>">    
        </div>

        <div>
          <label for="name">Name</label><br>
          <input class="form-control" type="text" name="name" value="<%= data.name %>">    
        </div>

        <div>
          <label for="phone">Phone</label><br>
          <input class="form-control" type="text" name="phone" value="<%= data.phone %>">    
        </div>

        <div>
          <label for="address">Address</label><br>
          <input class="form-control" type="text" name="address" value="<%= data.address %>">    
        </div>

        <div>
          <label for="item_name">Item Name</label><br>
          <input class="form-control" type="text" name="item_name" value="<%= data.item_name %>">    
        </div>

        <div>
          <label for="item_qty">Item Quantity</label><br>
          <input class="form-control" type="text" name="item_qty" value="<%= data.item_qty %>">    
        </div>

        <div>
          <label for="total">Total</label><br>
          <input class="form-control" type="text" name="total" value="<%= data.total %>">    
        </div>
        
        <div class="form-group">
          <label for="status">Status:</label>
          <select class="form-control" name="status" id="status">    
          <option value="pending" 
          <%if(data.status == "pending"){%>
              <%="selected"%>
          <%}%>
          >Pending</option>
          <option value="accept"
          <%if(data.status == "Accept"){%>
              <%="selected"%>
          <%}%>
          >Accept</option>           
          <option value="delivering"
          <%if(data.status == "delivering"){%>
              <%="selected"%>
          <%}%>
          >Delivering</option> 
          <option class="text-danger" value="reject"
          <%if(data.status == "reject"){%>
              <%="selected"%>
          <%}%>
          >Reject</option> 
        </select>   
        </div>


        <div class="form-group">
          <label for="name">Comment</label><br>
          <textarea class="form-control" name="comment" rows="" cols=""></textarea>      
        </div>   
        <input type="hidden" name="doc_id" value="<%= data.doc_id %>">
        
        <input class="btn btn-dark" type="submit" value="Submit"> 
        </form>
      
